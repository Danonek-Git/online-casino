{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
  <div class="page auth-page">
    {% include 'partials/_main_header.html.twig' %}

    <div class="auth-shell">
      <div class="auth-card">
        <h1>Dołącz do stołu</h1>
        <p class="auth-subtitle">Stwórz konto i odbierz startowe saldo.</p>

        {{ form_start(registrationForm, { attr: { class: 'auth-form' } }) }}
          {{ form_errors(registrationForm) }}
          <label class="auth-field">
            <span>Email</span>
            {{ form_widget(registrationForm.email, { attr: { class: 'auth-input', autocomplete: 'email' } }) }}
          </label>
          <label class="auth-field">
            <span>Hasło</span>
            {{ form_widget(registrationForm.plainPassword, { attr: { class: 'auth-input', autocomplete: 'new-password' } }) }}
          </label>
          <label class="auth-checkbox">
            {{ form_widget(registrationForm.agreeTerms) }}
            Akceptuję regulamin
          </label>

          <button type="submit" class="btn primary">Zarejestruj</button>
        {{ form_end(registrationForm) }}
      </div>
    </div>
  </div>
{% endblock %}
