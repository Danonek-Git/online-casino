<header class="main-header">
  <div class="brand">
    <span class="brand-mark">OC</span>
    <span class="brand-name">Online Casino</span>
  </div>
  <nav class="main-nav">
    <a class="btn ghost" href="{{ path('app_home') }}">Strona główna</a>
    <a class="btn ghost" href="{{ path('roulette_index') }}">Ruletka</a>
    <a class="btn ghost" href="{{ path('blackjack_index') }}">Blackjack</a>
    {% if app.user %}
      <a class="btn ghost" href="{{ path('app_profile') }}">Profil</a>
      {% if is_granted('ROLE_ADMIN') %}
        <a class="btn ghost" href="{{ path('admin_index') }}">Panel administratora</a>
      {% endif %}
      <a class="btn ghost" href="{{ path('app_logout') }}">Wyloguj</a>
    {% else %}
      <a class="btn ghost" href="{{ path('app_login') }}">Logowanie</a>
      <a class="btn primary" href="{{ path('app_register') }}">Rejestracja</a>
    {% endif %}
  </nav>
</header>
