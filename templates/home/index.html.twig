{% extends 'base.html.twig' %}

{% block title %}Online Casino{% endblock %}

{% block body %}
    <h1>Online Casino</h1>

    {% if app.user %}
        <p>Zalogowany jako: {{ app.user.userIdentifier }}</p>
        <p><a href="{{ path('app_logout') }}">Wyloguj</a></p>
    {% else %}
        <p><a href="{{ path('app_login') }}">Zaloguj</a></p>
        <p><a href="{{ path('app_register') }}">Zarejestruj</a></p>
    {% endif %}
{% endblock %}
