{% extends 'base.html.twig' %}

{% block title %}Artykuły{% endblock %}

{% block body %}
  <div class="page">
    {% include 'partials/_main_header.html.twig' %}

    <section class="articles-section">
      <header class="section-header">
        <div>
          <h1>Artykuły</h1>
          <p>Satyrystyczny kącik dla osób, które rozumieją, że to tylko memy.</p>
        </div>
      </header>

      <div class="articles-grid">
        {% for article in articles %}
          <article class="article-card">
            <a href="{{ path('articles_show', { slug: article.slug }) }}" class="article-media">
              <img src="{{ asset(article.image) }}" alt="{{ article.title }}">
            </a>
            <div class="article-body">
              <h2>
                <a href="{{ path('articles_show', { slug: article.slug }) }}">{{ article.title }}</a>
              </h2>
              <p class="article-lead">{{ article.excerpt }}</p>
              <a class="btn ghost" href="{{ path('articles_show', { slug: article.slug }) }}">Czytaj dalej</a>
            </div>
          </article>
        {% endfor %}
      </div>
    </section>
  </div>
{% endblock %}
