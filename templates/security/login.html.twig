{% extends 'base.html.twig' %}

{% block title %}Logowanie{% endblock %}

{% block body %}
  <div class="page auth-page">
    {% include 'partials/_main_header.html.twig' %}

    <div class="auth-shell">
      <div class="auth-card">
        <h1>Zaloguj się</h1>
        <p class="auth-subtitle">Wróć do gry i sprawdź saldo.</p>

        {% if error %}
          <div class="flash flash-error flash-popup">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
          <div class="flash flash-success flash-popup">
            Zalogowany jako {{ app.user.userIdentifier }}.
          </div>
        {% endif %}

        <form method="post" class="auth-form">
          <label class="auth-field">
            <span>Email</span>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="auth-input" autocomplete="email" required autofocus>
          </label>
          <label class="auth-field">
            <span>Hasło</span>
            <input type="password" name="password" id="inputPassword" class="auth-input" autocomplete="current-password" required>
          </label>
          <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

          <label class="auth-checkbox">
            <input type="checkbox" name="_remember_me">
            Zapamiętaj mnie
          </label>

          <button class="btn primary" type="submit">Zaloguj</button>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
